<UserControl
    x:Class="Microsoft.PowerToys.Settings.UI.Controls.HotkeySettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.PowerToys.Settings.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
   x:Name="LayoutRoot"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid HorizontalAlignment="Right">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="EditButton"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="OpenDialogButton_Click" >
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <ItemsControl x:Name="PreviewKeysControl"
                                  IsEnabled="{Binding ElementName=EditButton, Path=IsEnabled}"
                                  VerticalAlignment="Center"
                                  IsTabStop="False">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:KeyVisual IsTabStop="False"
                                                 AutomationProperties.AccessibilityView="Raw"
                                                 RenderSmall="True"
                                                 VerticalAlignment="Center"
                                                 Content="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <FontIcon Glyph="&#xE104;"
                              FontFamily="{ThemeResource SymbolThemeFontFamily}"
                              FontSize="14"
                              Margin="0,0,4,0" />
                </StackPanel>
            </Button>
        </StackPanel>
       

        <ContentDialog x:Name="ShortcutDialog"
                       Title="Activation shortcut"
                       PrimaryButtonText="Save"
                       CloseButtonText="Cancel"
                       HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Stretch"
                       PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
                       PrimaryButtonClick="ShortcutDialog_PrimaryButtonClick"
                       Closing="ShortcutDialog_Closing"
                       Opened="ShortcutDialog_Opened"
                       Visibility="Collapsed">
            <!-- Visibility property can be removed once https://github.com/microsoft/microsoft-ui-xaml/pull/5736 is merged and we can move to WinUI 2.7 -->
            <StackPanel Orientation="Vertical"
                        Spacing="24"
                        MinWidth="480">
                <TextBlock Text="Press a combination of keys to change this shortcut" />
                <ItemsControl x:Name="KeysControl"
                              HorizontalAlignment="Center"
                              Margin="0,12,0,12">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:KeyVisual AutomationProperties.AccessibilityView="Raw"
                                             Height="56"
                                             IsTabStop="False"
                                             Content="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock x:Name="WarningLabel" 
                           TextWrapping="WrapWholeWords"
                           Style="{StaticResource SecondaryTextStyle}" >
                        <Run Text="Only shortcuts with the with the following hotkeys are valid:"/><LineBreak/>
                        <Run Text="Windows key, Ctrl, Alt and Shift"/>
                </TextBlock>
              
            </StackPanel>
        </ContentDialog>
    </Grid>
</UserControl>